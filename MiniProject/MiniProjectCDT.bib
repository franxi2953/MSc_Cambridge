@article{morlat_phototransformation_2003,
	title = {Phototransformation of water-soluble polymers. {Part} {II}: photooxidation of poly(ethylene oxide) in aqueous solution},
	volume = {44},
	issn = {0032-3861},
	shorttitle = {Phototransformation of water-soluble polymers. {Part} {II}},
	url = {https://www.sciencedirect.com/science/article/pii/S003238610300939X},
	doi = {10.1016/j.polymer.2003.10.022},
	abstract = {Poly(ethylene oxide) (PEO) was irradiated in aqueous solution under long wavelengths (λ{\textgreater}300nm, 20°C) and in presence of oxygen. The photooxidation of PEO was studied by IR spectrophotometry, viscometry and size exclusion chromatography. The formation of the oxidation photoproducts was studied by infrared analysis of films obtained by evaporation of aliquots of irradiated aqueous solutions. The photoproducts were identified by chemical derivatization treatments coupled with infrared measurements. Viscosimetry and SEC analysis showed that photooxidation was leading to a dramatic decrease of the molecular weights. The influence of the pH of the aqueous solutions was also examined. Unexpected results were obtained for the pH 12 solutions, indicating a strong inhibition of the oxidation. Comparison with the results obtained in the case of PEO irradiated in the solid state showed that no direct transposition of the knowledge concerning the behavior of the solid polymer could be made.},
	number = {26},
	urldate = {2024-01-04},
	journal = {Polymer},
	author = {Morlat, Sandrine and Gardette, Jean-Luc},
	month = dec,
	year = {2003},
	keywords = {Aqueous solution, Photooxidation, Poly(ethylene oxide)},
	pages = {7891--7897},
}
