	journal = {Microfluidics and Nanofluidics},
	author = {Min, Xin and Kim, Woo Soo},
	month = oct,
	year = {2019},
	keywords = {Digital microfluidics, Energy efficient, Portable platforms, Sensing system},
	pages = {127},
	annote = {Describe variables interesantes a tener en cuenta en el diseño del electrodfo como la interfaz entre electrodos o el desnivel en z
Interesantes otras variables como energias alternativas para mover las gotas.

},
}

